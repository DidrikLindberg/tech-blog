<div class="post-container">
  <div class="post-header">
    <h2 class="post-title">{{post.title}}</h2>
    <p class="post-date">Written on {{formatDate post.createdAt "MMM DD, YYYY h:mm A"}}</p>
  </div>
  <div class="post-body">
    <p class="post-contents">{{post.body}}</p>
    <p class="post-author">- {{post.user.username}}</p>
  </div>
  <hr class="post-divider">
  <div class="post-comments">
    <h2 class="post-title">{{comment}}</h2>
    <h3>Comments</h3>
    {{#if comments.length}}
         {{#each comments}}
              <div class="media">
                <img src="{{this.User.imageUrl}}" class="mr-3 rounded-circle" alt="{{this.User.username}}">
                <div class="media-body">
                  <h5 class="mt-0">{{this.User.username}}</h5>
                  {{this.comment}}
                </div>
              </div>
              {{/each}}
    {{else}}
      <p class="no-comments">No comments yet</p>
    {{/if}}
  </div>
  {{#if logged_in}}
    <div class="comment-form">
      <h3>New Comment:</h3>
      <form class="form new-comment-form">
        <div class="form-group">
          <label for="comment">Comment:</label>
          <textarea class="form-input" id="text" name="comment-name"></textarea>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Add Comment</button>
        </div>
      </form>
    </div>
  {{/if}}
</div>
<script src="/js/comment.js"></script>
